<?xml version="1.0"?>
<odoo>
    <data>

        <record id="report_session" model="ir.actions.report">
            <field name="name">Session Report</field>
            <field name="model">openacademy.session</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">openacademy.report_session_view</field>
            <field name="report_file">openacademy.report_session</field>
            <field name="binding_model_id" ref="model_openacademy_session"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_session_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 t-field="doc.name"/>
                            <p>Instructor: <span t-field="doc.instructor_id.name"/></p>
                            <p>From <span t-field="doc.start_date"/> to <span t-field="doc.end_date"/></p>
                            <h3>Attendees:</h3>
                            <ul>
                                <t t-foreach="doc.attendee_ids" t-as="attendee">
                                    <li><span t-field="attendee.name"/></li>
                                </t>
                            </ul>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="report_invites" model="ir.actions.report">
            <field name="name">Attendees Invites</field>
            <field name="model">openacademy.session</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">openacademy.report_attendees_invites</field>
            <field name="report_file">openacademy.report_attendees</field>
            <field name="binding_model_id" ref="model_openacademy_session"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_attendees_invites">
                <t t-foreach="docs" t-as="doc">
                    <t t-foreach="doc.attendee_ids" t-as="attendee">
                        <t t-call="web.html_container">
                            <t t-call="web.external_layout">
                                <div class="page">

                                    <div class="row">
                                        <div name="attendee_address" class="col-xs-5 col-xs-offset-7">
                                            <address t-esc="attendee"
                                                     t-options="{
                                                         'widget': 'contact',
                                                         'fields': ['address', 'name'],
                                                         'no_marker': True
                                                     }"/>
                                        </div>
                                    </div>

                                     <div class="row">
                                        Hi <span t-field="attendee.name"/>,<br/>
                                        You are hereby invited to the training. Don't be late.<br/><br/>
                                    </div>

                                    <div class="row">
                                         <table class="table table-condensed">
                                            <tr>
                                                <td><b>From:</b></td>
                                                <td><span t-field="doc.start_date"/></td>
                                                <td><b>To:</b></td>
                                                <td><span t-field="doc.end_date"/></td>
                                            </tr>
                                             <tr>
                                                 <td><b>Course:</b></td>
                                                 <td><span t-field="doc.course_id.name"/></td>
                                                 <td><b>Instructor:</b></td>
                                                 <td><span t-field="doc.instructor_id.name"/></td>
                                             </tr>
                                             <tr>
                                                 <td><b>Duration:</b></td>
                                                 <td colspan="3"><span t-field="doc.duration"/></td>
                                             </tr>
                                         </table>
                                    </div>

                                    <div class="row">
                                        Entry code:
                                        <img t-att-src="'/report/barcode/?type=Code128&amp;value=%s,%s,%s&amp;humanreadable=1&amp;width=800&amp;height=80' % (doc.id, attendee.id, attendee.name)"
                                             style="width:400px; height:60px"/>
                                    </div>

                                </div>
                            </t>
                        </t>
                    </t>
                <p style="page-break-after: always;"/>
            </t>
        </template>

    </data>
</odoo>
