<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_inherit_openacademy" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.openacademy</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name='openacademy' string="Open Academy">
                    <group>
                        <field name="instructor"/>
                        <field name="session_ids"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="partner_view_search" model="ir.ui.view">
        <field name="name">openacademy.partner.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Search Partner">
                <field name="display_name"
                       filter_domain="['|','|',('display_name','ilike',self),('ref','=',self),('email','ilike',self)]"/>
                <separator/>
                <filter string="Instructor" name="instructor" domain="[('instructor','=',1)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="partner_action" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="openacademy.partner_view_search"/>
    </record>
</odoo>
