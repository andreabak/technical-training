<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Groups -->

        <record id="group_apprentice" model="res.groups">
            <field name="name">Apprentices</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_maester" model="res.groups">
            <field name="name">Maesters</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(6,0,[ref('group_apprentice')])]"/>
        </record>

        <record id="group_archmaester" model="res.groups">
            <field name="name">Archmaesters</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(6,0,[ref('group_maester')])]"/>
        </record>

        <!-- Default groups assignments -->

        <record model="res.users" id="base.user_root">
            <field eval="[(4,ref('openacademy.group_archmaester'))]" name="groups_id"/>
        </record>

        <record model="res.users" id="base.user_admin">
            <field eval="[(4,ref('openacademy.group_archmaester'))]" name="groups_id"/>
        </record>

    </data>

    <data noupdate="1">

        <!-- Rules -->

        <record id="only_responsible_can_modify" model="ir.rule">
            <field name="name">Course can be modified only by Responsible</field>
            <field name="model_id" ref="model_openacademy_course"/>
            <field name="groups" eval="[(4, ref('openacademy.group_maester'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                [('responsible_id','=',user.id)]
            </field>
        </record>

    </data>
</odoo>
