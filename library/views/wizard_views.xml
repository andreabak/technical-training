<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="rent_books_wizard_view_form" model="ir.ui.view">
            <field name="name">library.rent_books.wizard.form</field>
            <field name="model">library.rent_books.wizard</field>
            <field name="arch" type="xml">
                <form string="Rent Books">
                    <group>
                        <field name="copy_ids" required="True"/>
                        <field name="customer_id" required="True"/>
                        <field name="return_date" required="True"/>
                    </group>
                    <footer>
                        <button name="next_step" type="object"
                                string="Confirm" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="rent_books_wizard_action" model="ir.actions.act_window">
            <field name="name">Rent Books</field>
            <field name="res_model">library.rent_books.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{
                'default_copy_ids': active_ids,
            }</field>
            <field name="binding_model_id" ref="model_library_copy"/>
        </record>

    </data>
</odoo>
