<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="session_view_form" model="ir.ui.view">
        <field name="name">openacademy.session.form</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
                <field name="can_edit_commander" invisible="1"/>
                <field name="commander" attrs="{'readonly': [('can_edit_commander', '=', False)]}"/>
                <field name="infantry_count"/>
                <field name="cavalry_count"/>
            </form>
        </field>
    </record>

    <record id="army_action" model="ir.actions.act_window">
        <field name="name">Army</field>
        <field name="res_model">kingdom.army</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
